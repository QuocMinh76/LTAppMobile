<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_task_group_textView_taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        style="?android:listSeparatorTextViewStyle"
        android:layout_toLeftOf="@id/list_task_group_imageButton_dropdown"
        android:text="Task group name"/>

    <ImageButton
        android:id="@+id/list_task_group_imageButton_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_down"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/list_task_group_textView_taskName"/>

</RelativeLayout>